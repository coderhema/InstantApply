
{
  "manifest_version": 3,
  "name": "InstantApply",
  "version": "1.0.0",
  "description": "Premium AI assistant for automating form responses with human-like precision.",
  "permissions": [
    "sidePanel",
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Open InstantApply"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "background": {
    "service_worker": "background.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.ts"]
    }
  ]
}
