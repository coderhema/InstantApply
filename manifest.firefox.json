{
    "manifest_version": 3,
    "name": "InstantApply",
    "version": "1.0.0",
    "description": "Premium AI assistant for automating form responses with human-like precision.",
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Open InstantApply"
    },
    "sidebar_action": {
        "default_panel": "index.html",
        "default_title": "InstantApply"
    },
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ]
}